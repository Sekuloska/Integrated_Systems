@model List<Order>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th></th>
            <th>Customer</th>
            <th>Order tracking number</th>
            <th>Number of tickets</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="5" class="text-center"><b><i>No orders were made</i></b></td>
            </tr>
        }
        else
        {
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner.FirstName) @Html.DisplayFor(modelItem => item.Owner.LastName) <br>
                        @Html.DisplayFor(modelItem => item.Owner.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @{
                            var quantity = 0;
                            for (int j = 0; j < item.ProductInOrders.Count; j++)
                            {
                                var p = item.ProductInOrders.ToList()[j];
                                quantity += p.Quantity;
                            }
                            @(quantity)
                        }
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                            Details
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

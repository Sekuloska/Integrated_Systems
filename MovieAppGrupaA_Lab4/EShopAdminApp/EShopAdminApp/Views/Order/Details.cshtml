@Model EShopAdminApp.Models.Order

@{
    var sum = 0.0;
    for(int i=0;i<Model.ProductInOrders.Count; i++)
    {
        var item = Model.ProductInOrders[i];
        sum += item.Quantity * item.OrderedProduct.Price;
    }
    ViewData["Total"] = sum;
}

<div><h5>Details for order no: @Model.Id</h5></div>

<div class="container">

    @for(int i=0;i<Model.ProductInOrders.Count; i++)
    {
        var item = Model.ProductInOrders[i];
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.OrderedProduct.Movie.MovieImage" alt="Card image cap" height="400px" width="300px">
                <div class="card-body">
                    <h5 class="card-title">Ticket for @item.OrderedProduct.Movie.MovieName</h5>
                    <p class="card-text">Quantity ordered: @item.Quantity</p>
                    <h6>Price: @(item.Quantity * item.OrderedProduct.Price)
                    </h6>
                </div>
            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }
    <div>
        <b>Total price: </b> @ViewData["Total"]$
    </div>
</div>
